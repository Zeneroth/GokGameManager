<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Test</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
</head>

<body>
    <div class="container">
        <% if(serverStatus !== null){ %>
            <p class="status">Server Status : <%= serverStatus %></p>
            <% } %>
    </div>
    <div class="container">
        <fieldset>
            <form action="/start" method="post">
                <input name="Name" type="text" class="ghost-input" placeholder="Enter your Name" required>
                <input type="submit" class="ghost-button" value="Start Server">
            </form>
        </fieldset>

        <fieldset>
            <form action="/stop" method="post">
                <input name="Name" type="text" class="ghost-input" placeholder="Enter your Name" required>
                <input type="submit" class="ghost-button" value="Stop Server">
            </form>

            <% if(result !== null){ %>
            <p><%= result %></p>
            <% } %><% if(error !== null){ %>
            <p><%= error %></p>
            <% } %>

        </fieldset>
    </div>
</body>

</html>